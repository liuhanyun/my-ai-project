<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <properties resource="generator.properties" />

  <context id="MysqlTables" targetRuntime="MyBatis3Simple">
    <property name="javaFileEncoding" value="UTF-8" />

    <jdbcConnection
        driverClass="com.mysql.cj.jdbc.Driver"
        connectionURL="${jdbc.url}"
        userId="${jdbc.user}"
        password="${jdbc.password}">
      <property name="nullCatalogMeansCurrent" value="true" />
    </jdbcConnection>

    <javaModelGenerator
        targetPackage="com.use.demo.infrastructure.dataobject"
        targetProject="${infrastructure.targetProject}" />

    <sqlMapGenerator
        targetPackage="com.use.demo.mappers"
        targetProject="${infrastructure.resources}" />

    <javaClientGenerator
        type="XMLMAPPER"
        targetPackage="com.use.demo.infrastructure.mapper"
        targetProject="${infrastructure.targetProject}" />

    <table tableName="tbl_shop_note" domainObjectName="ShopNoteDO" mapperName="ShopNoteMapper" modelType="flat" />
    <table tableName="tbl_org_payment" domainObjectName="OrgPaymentDO" mapperName="OrgPaymentMapper" modelType="flat" />
  </context>
</generatorConfiguration>
